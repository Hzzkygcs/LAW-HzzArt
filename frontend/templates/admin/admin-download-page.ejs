<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Download Progress</title>

    <%- include(urls.global_dependencies(), locals) %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>
    <%- include(urls.footer_navbar.navbar(), locals) %>
    <div class="mx-auto" style="padding-left: 1rem; padding-right: 1rem; max-width: max(700px, 70vw);">
        <div class="flex justify-between items-center pt-5 pb-7">
            <h1 class="text-2xl font-bold">All Download Progress</h1>
        </div>

        <div class="w-full mb-8 overflow-hidden rounded-lg shadow-xs">
              <div class="w-full overflow-x-auto">
                <table class="w-full whitespace-no-wrap" style="table-layout:fixed;">
                  <thead>
                    <tr
                      class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b dark:border-gray-400 bg-gray-50 dark:text-gray-800 dark:bg-gray-200">
                      <th class="px-4 py-3 text-center">Username</th>
                      <th class="px-4 py-3 text-center">Collection Name</th>
                      <th class="px-4 py-3 text-center">Token</th>
                      <th class="px-4 py-3 text-center">Progress</th>
                    </tr>
                  </thead>

                  <%- include("download-components/-multi-download-row.ejs", locals) %>
                  <tbody class="all-download-container
                                bg-white divide-y dark:divide-gray-400 dark:bg-gray-200">
                  </tbody>
                </table>
              </div>
            </div>
    </div>


    <%- include(urls.footer_navbar.footer(), locals) %>
</body>
</html>

<script src="<%= urls.video.multipleDownloadProgressJs() %>"></script>

<script>
    function getDownloadPage(token) {
        return `<%= urls.video.videoProgress() %>?token=${token}`;
    }
    $(document).ready(async function () {
        const getSpecificUserDownloadList = `<%= urls.video.getEntireVideoProgress() %>`;
        await alwaysRefreshDownloadList(getSpecificUserDownloadList, $(".all-download-container"), true);
    });
</script>

