<script>
  function newReportCollectionCard(urls, collectionId, numOfReport, owner, name, photoUrl, parent=null) {
    if (collectionId == null || collectionId < 0)
      return alert("collectionId Not Provided");

    const template = $("#template-card-collections");
    const ret = $(template.html());
    ret.attr("id", `collection-${collectionId}`);

    const hrefElement = ret.find(".click-url");
    hrefElement.attr('href', urls +'?id='+ collectionId.toString());
    ret.find(".num-of-report").text(numOfReport.toString());
    ret.find(".collection-name").text(name);
    ret.find(".collection-owner").text(owner);
    ret.find(".collection-photo").attr("src", photoUrl);

    if (parent != null)
      ret.appendTo(parent);
    return ret;
  }
</script>